<SetupScreen>:

    FloatLayout:

        # Setup Label:

        CLabel:
            text: "Setup"
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size: sp(24)

        # Address Text Input:

        CTextInputLayout:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: None
            width: dp(300)

            CTextInput:
                hint_text: "City or Zip Code"
                on_text: root.Setup(self.text)
                id: address_input

            CTextInputHelperText:
                text: "Enter Your City or Zip Code"

        # Search Result Button:

        CButtonTertiary:
            text: "Start typing"
            id: address_button
            role: "Large Productive"
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            size_hint_x: 0.8
            disabled: True
            icon: "home"
            on_press:
                root.on_address_button_press(self.text)