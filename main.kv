<SetupScreen>:

    CRelativeLayout:

        padding: 0
        spacing: 0

        AsyncImage:
            source: "images/sunny.jpg"
            size_hint: 1, 1
            fit_mode: "cover"

        # Setup Label:
        CLabel:
            text: "Setup"
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size: sp(24)

        # Address Text Input:
        CTextInputLayout:
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: None
            width: dp(300)

            CTextInput:
                hint_text: "City or Zip Code"
                on_text: root.Setup()
                id: address_input

            CTextInputHelperText:
                text: "Enter Your City or Zip Code (This will be stored on our servers)"
                color: "#000000"

        # Search Result Button:
        CButtonPrimary:
            text: "Start typing"
            id: address_button
            role: "Large Productive"
            size_hint_x: 1          
            size_hint_y: None
            height: dp(180)
            pos_hint: {'y': 0}  
            text_size: self.width - dp(20), None
            disabled: True
            icon: "location--filled"
            on_press:
                root.on_address_button_press(self.text.strip())
                root.suggestion_pressed()

        # Continue Button:
        CButtonSecondary:
            icon: "arrow--right"
            text: "Finish Setup"
            spacing: 0
            pos_hint: {'center_y': 0.9, 'center_x': 0.9}
            on_press:
                root.countinue_pressed()
