<AppScreen>:

    CRelativeLayout:

        padding: 0
        spacing: 0

        AsyncImage:
            source: root.bg_image
            size_hint: 1, 1
            fit_mode: "cover"

        AsyncImage:
            id: weather_icon
            source: root.icon_path 
            size_hint: (None, None)
            size: ("100dp", "100dp")
            pos_hint: {'center_x': 0.25, 'center_y': 0.75}

        CLabel:
            id: city_label
            style: "heading_02"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            font_size: sp(20)

        CLabel:
            id: current_temp_label
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            center_x: weather_icon.center_x + dp(80) 
            center_y: weather_icon.center_y + dp(30)
            font_size: sp(10)

        CLabel:
            id: condition_label
            style: "heading_04" 
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            center_x: weather_icon.center_x 
            center_y: weather_icon.center_y - dp(30)
            font_size: sp(10)

        CLabel:
            id: min_max_label
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            center_x: weather_icon.center_x + dp(5)
            center_y: weather_icon.center_y - dp(40)
            font_size: sp(8)

        CLabel:
            id: feels_like_label
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            font_size: sp(10)

        CLabel:
            id: precip_label
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.4}
            font_size: sp(10)

        CLabel:
            id: snow_label
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.3}
            font_size: sp(10)

        CLabel:
            id: thunder_label
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            pos_hint: {'center_x': 0.5, 'center_y': 0.2}
            font_size: sp(10)

        CLabel:
            id: wind_chill_label
            style: "heading_04"
            typeface: "IBM Plex Sans"
            weight_style: "Medium"
            halign: "center"
            color: (0,0,0,1)
            center_x: weather_icon.center_x + dp(5)
            center_y: weather_icon.center_y - dp(50)
            font_size: sp(8)

        CLoadingIndicator:
            role: "Large"
            opacity: 0
            id: loader
